include header.pug

body
  .main.container
    .row
      .col-md-6.col-md-offset-3
      h1.display-4.m-b-2 Sign Up
      form(method='POST' action='/signup')
        div.formgroup
          label(for='email') Email
          input.form-control(type='text' id='email' placeholder='email' name='email')
        div.form-group
          label(for='password') Password
          input.form-control(type='password' id='password' placeholder='password' name='password')
        div.form-group
          label(for='password') Confirm Password
          input.form-control(type='password' id='confirmPassword' placeholder='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign Up!
        h6  #{error}
